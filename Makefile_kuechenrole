waom10_grd.nc: src/preprocessing/make_grid.m data/external/bedmap2/bedmap2_bin/ data/external/rtopo/RTopo-2.0.1_30sec_bedrock_topography_S30.nc
	matlab -nojvm src/preprocessing/make_grid.m

bedmap2_bin:
	curl https://secure.antarctica.ac.uk/data/bedmap2/bedmap2_bin.zip > data/external/bedmap2/
	unzip bedmap2_bin.zip

RTopo-2.0.1_30sec_bedrock_topography_S30.nc:
	curl https://doi.org/10.1594/PANGAEA.856844 > RTopo-2.0.1_30sec_bedrock_topography_S30.nc

